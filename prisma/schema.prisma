datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  role      Role     @default(USER)
  quotes    Quote[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quote {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  title     String
  details   Json
  status    QuoteStatus @default(SUBMITTED)
  total     Decimal?    @db.Decimal(12,2)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  nombre    String
  email     String
  empresa   String?
  servicio  String
  mensaje   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum QuoteStatus {
  DRAFT
  SUBMITTED
  REVIEWING
  APPROVED
  REJECTED
}
